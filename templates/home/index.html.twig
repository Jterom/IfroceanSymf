{% extends 'base.html.twig' %}
{% block title %}Hello HomeController!{% endblock %}
{% block body %}
    <div class="tableau">
        <table class="table center">
            <thead class="thead-dark">
            <tr>
                <th scope="col">ID_Outil</th>
                <th scope="col">Nom_Outil</th>
                <th scope="col">Nom_Categorie</th>
                <th scope="col">ID_Categorie</th>
            </tr>
            </thead>
            <tbody>
            {% for commune in communes %}
                <tr>
                    <td>{{ commune.nomcommune }} </td>
                    <td>{{ commune.departementsIddepartement.nomdepartement }} </td>
                </tr>
            {% else %}
                <p>Il n'y a pas encore d'article</p>
            {% endfor %}
            </tbody>
        </table>
    </div>
{% endblock %}
